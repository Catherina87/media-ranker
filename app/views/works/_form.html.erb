

<div class="form-group">
  <%= form_with model: @work do |f| %>

    <%= f.label "Category:" %>
    <%= f.select :category, ["album", "book", "movie"] %>
    <br>

    <%= f.label "Title:" %>
    <%= f.text_field :title %>
    <br>

    <%= f.label "Creator:" %>
    <%= f.text_field :creator %>
    <br>

    <%= f.label "Publication Year:" %>
    <%= f.text_field :publication_year %>
    <br>

    <%= f.label "Description:" %>
    <%= f.text_field :description %>
    <br>

    <%= f.submit "#{action_name} Work", class: "work-button" %>

  <% end %>

</div>
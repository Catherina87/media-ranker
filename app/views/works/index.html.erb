<section class="flash">
  <p> <%= flash[:success] %></p>
</section>

<h1>List of Works</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
    </tr>
  </thead>
  <tbody>

    <% @work.each do |work| %>

      <tr>   
        <td><%= link_to work.title, work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
      </tr>

    <% end%>
    
  </tbody>
</table>




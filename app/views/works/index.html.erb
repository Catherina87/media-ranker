<section class="flash">
  <p> <%= flash[:success] %></p>
</section>

<main>

  <h2>List of Works</h2>

  <section class="media-table">
    <h4>Albums</h4>

    <table class="table">
      <thead>
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Upvote</th>
        </tr>
      </thead>
      <tbody>

        <% albums = Work.sort_album_works%>

        <% albums.each do |album| %>

          <tr>   
            <td><%= album.votes.count %></td>
            <td><%= link_to album.title, work_path(album.id) %></td>
            <td><%= album.creator %></td>
            <td><%= album.publication_year %></td>
            <td><%= link_to "Upvote", work_votes_path(album.id), method: :post, class: "btn btn-primary" %></td>
          </tr>

        <% end%>
        
      </tbody>
    </table>
  </section>




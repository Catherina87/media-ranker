<section class="flash">
  <p> <%= flash[:success] %></p>
</section>

<h2>List of Works</h2>

<h4>Albums</h4>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
    </tr>
  </thead>
  <tbody>

    <% albums = Work.sort_album_works%>

    <% albums.each do |album| %>

      <tr>   
        <td><%= link_to album.title, work_path(album.id) %></td>
        <td><%= album.creator %></td>
        <td><%= album.publication_year %></td>
      </tr>

    <% end%>
    
  </tbody>
</table>


